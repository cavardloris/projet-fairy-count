{% extends "layout.html.twig" %}

{% block main %}
    <main class="container py-5">
        <div class="text-center mb-5 position-relative">
            <a href="index.php?route=logout" class="btn btn-danger position-fixed" style="top: 2rem; left: 2rem; height: 3rem; z-index: 1000;">
                <i class="bi bi-box-arrow-right"></i> Se déconnecter
            </a>

            <h1 class="display-3 fw-bold mb-3">
                <i class="text-primary"></i> FairCount
            </h1>

            <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#newExpenseModal">
                <i class="bi bi-plus-circle"></i> Nouvelle dépense
            </button>
        </div>

        <section class="mt-5">
            <h2 class="h3 mb-4">Liste des dépenses</h2>
            {% if expenses is defined and expenses|length > 0 %}
                <div class="list-group">
                    {% for expense in expenses %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">{{ expense.category.name }}</h5>
                                    <small class="text-muted">{{ expense.created_at|date('d/m/Y H:i') }}</small>
                                </div>
                                <span class="badge bg-primary rounded-pill fs-6">{{ expense.amount|number_format(2, ',', ' ') }} €</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted text-center">Aucune dépense enregistrée pour le moment.</p>
            {% endif %}
        </section>

        <table class="table table-striped mt-3">
            <thead>
            <tr>
                <th>
                    Débiteur
                </th>
                <th>
                    Dépense
                </th>
                <th>
                    Remboursement
                </th>
                <th>
                    Créditeur
                </th>
                <th>
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="index.php?route=show&id={{ user.id }}" class="btn btn-info">
                            <span class="bi bi-eye"></span>
                        </a>
                        <a href="index.php?route=update&id={{ user.id }}" class="btn btn-success">
                            <span class="bi bi-pencil"></span>
                        </a>
                        <a href="index.php?route=delete&id={{ user.id }}" class="btn btn-danger">
                            <span class="bi bi-trash"></span>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>

    <div class="modal fade" id="newExpenseModal" tabindex="-1" aria-labelledby="newExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newExpenseModalLabel">
                        <i class="bi bi-plus-circle text-success"></i> Nouvelle dépense
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="index.php?route=createExpense">
                    <div class="modal-body">

                        <div class="mb-3">
                            <label for="amount" class="form-label">
                                <i class="bi bi-currency-euro"></i> Montant
                            </label>
                            <input type="number" step="0.01" min="0.01" name="amount" id="amount" class="form-control" placeholder="Ex: 25.50" required>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">
                                <i class="bi bi-tag"></i> Catégorie
                            </label>
                            <select name="category_id" id="category" class="form-select" required>
                                <option value="">-- Choisir une catégorie --</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-people"></i> Partager avec
                            </label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                {% for user in users %}
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="users[]" value="{{ user.id }}" id="user{{ user.id }}">
                                        <label class="form-check-label" for="user{{ user.id }}">
                                            {{ user.name }} ({{ user.email }})
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                            <small class="text-muted">Sélectionnez les personnes concernées par cette dépense</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Annuler
                        </button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
