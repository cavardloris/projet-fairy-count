{% extends "layout.html.twig" %}

{% block main %}
    <main class="container py-5">
        <div class="text-center mb-5 position-relative">
            <a href="index.php?route=logout" class="btn btn-danger position-fixed" style="top: 2rem; left: 2rem; height: 3rem; z-index: 1000;">
                <i class="bi bi-box-arrow-right"></i> Se déconnecter
            </a>

            <h1 class="display-3 fw-bold mb-3">
                <i class="text-primary"></i> FairCount
            </h1>

            <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#newExpenseModal">
                <i class="bi bi-plus-circle"></i> Nouvelle dépense
            </button>
        </div>
        <section class="mt-5">
            <h2 class="h3 mb-4">Dernières Dépenses Enregistrées</h2>

            <table class="table table-striped mt-3">
                <thead>
                <tr>
                    <th>Payé par</th>
                    <th>Montant total</th>
                    <th>Catégorie</th>
                    <th>Partagé avec</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for expenseData in expensesData %}
                    {% set expense = expenseData.expense %}
                    <tr>
                        <td>{{ expense.user.name }}</td>
                        <td>{{ expense.amount|number_format(2, ',', ' ') }} €</td>
                        <td>{{ expense.categorie.name }}</td>
                        <td>
                            {% if expenseData.shares is empty %}
                                Seul
                            {% else %}
                                {% set sharedUsers = [] %}
                                {% for share in expenseData.shares %}
                                    {% set sharedUsers = sharedUsers|merge([share.user.name ~ ' (' ~ share.shareAmounts|number_format(2, ',', ' ') ~ '€)']) %}
                                {% endfor %}
                                {{ sharedUsers|join(', ') }}
                            {% endif %}
                        </td>
                        <td>
                            <a href="index.php?route=deleteExpense&id={{ expense.id }}" class="btn btn-danger btn-sm">
                                <span class="bi bi-trash"></span>
                            </a>
                            <a href="index.php?route=checkExpense&id={{ expense.id }}" class="btn btn-success btn-sg">
                                <span class="bi bi-check-lg"></span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune dépense trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>


    </main>
    <div class="modal fade" id="newExpenseModal" tabindex="-1" aria-labelledby="newExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="index.php?route=createExpense">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newExpenseModalLabel">Ajouter une nouvelle dépense</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="amount" class="form-label">
                                <i class="bi bi-currency-euro"></i> Montant (€)
                            </label>
                            <input type="number" step="0.01" min="0.01" class="form-control" id="amount" name="amount" required>
                        </div>

                        <div class="mb-3">
                            <label for="category_id" class="form-label">
                                <i class="bi bi-tag"></i> Catégorie
                            </label>
                            <select class="form-select" id="category_id" name="category_id" required>
                                {% for category in categories %}
                                    <option value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-people"></i> Partager avec
                            </label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                {% for user in users %}
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="users_id[]" value="{{ user.id }}" id="user{{ user.id }}">
                                        <label class="form-check-label" for="user{{ user.id }}">
                                            {{ user.name }} ({{ user.email }})
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                            <small class="text-muted">Sélectionnez les personnes concernées par cette dépense</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Annuler
                        </button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}